extends ../layouts/default
block variables
	- var pageClass = 'deposit-active popup-active';

block head
	- var pageTitle = 'Saddle Fork';

block header
	include ../blocks/header/header--fail

block content
	main.main
		.container
			include ../blocks/tabs/tab-swap
			include ../blocks/tabs/tab-deposit
			include ../blocks/tabs/tab-withdraw
			include ../blocks/tabs/tab-risk
			.base-popup.active
				.base-popup__drop
					h2 Account
					.base-popup__info 
						.base-popup__info-logo
							img(src="images/logo-4.png", alt="")
						.base-popup__info-data 
							.base-popup__col 
								span Balance
								strong 5.8900
							.base-popup__col 
								span Network
								strong Etherium
							.base-popup__col 
								span Wallet
								strong MetaMask
					.base-popup__address 
						.base-popup__address-logo 
							img(src="images/logo-3.png", alt="")
						span.base-popup__address-value 0cvxu899000cvxu899000cvxu899000cvxu899
					.actions-panel 
						a(href="#") 
							img(src="images/icons/icon-copy.svg", alt="")
							span Copy Address
						a(href="#") 
							img(src="images/icons/icon-transactions.svg", alt="")
							span Transaction History
						a(href="#") 
							img(src="images/icons/icon-disconnect.svg", alt="")
							span Disconnect
					a(href="#").js-close 
						img(src="images/icons/icon-close.svg", alt="")
					